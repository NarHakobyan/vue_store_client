{
  "root": true,
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "extends": "airbnb-base",
  "plugins": [
    "html"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "build/webpack.base.conf.js"
      }
    }
  },
  "rules": {
    "import/extensions": [
      "error", "always", {
      "js": "never",
      "vue": "never"
    }],
    "import/no-extraneous-dependencies": [
      "error", {
      "optionalDependencies": [
        "test/unit/index.js"
      ]
      }
    ],
    "no-debugger": 0,
    "semi": ["error", "always"],
    "no-param-reassign": 0
  }
}
